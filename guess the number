import random

class Guess:
    def __init__(self):
        self.number = int(input('Enter a number between 1 and 9: '))
        self.rand = random.randint(1, 9)
        
        print(f'Your number = {self.number}')
        print(f'number generated by the CPU = {self.rand}')
        
        if (self.number - self.rand) == 0:
            print('Congratulations. You got the number right')
        elif -3 < (self.number - self.rand) < 3:
            print('Almost there')
        else:
            print('It did not even come close')

# Create an instance of the Guess class
game = Guess()
game
