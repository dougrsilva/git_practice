class Board:
    def __init__(self):
        self.choice = int(input("What size game board do you want to draw? "))
        
    def drawTheBoard(self):
        line = " ---" * self.choice
        column = "|\t" * (self.choice + 1)
        print("Here it is")
        for i in range(self.choice):
            print(line)
            print(column)
            
            
        print(line)
        
game = Board()
game.drawTheBoard()
