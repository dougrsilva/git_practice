from datetime import date
class Person:
    
    today = date.today()
    
    def __init__(self):   
        self.name = input('enter your name: ')
        self.age = int(input('enter your age: ')) 
 
    def displayInfo(self):   
        print("{} you will turn 100 in {}".format(self.name, (Person.today.year - self.age) + 100)) 
 
  
person = Person() 
person.displayInfo()
